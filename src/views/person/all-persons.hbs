<div class="row">
{{#each persons}}
<div class="col-md-3">
    <div class="card">
        <div class="card-body">
            <h4 class="card-tittle d-flex justify-content-between align-items-center">
                {{name}} <a href="/persons/edit/{{_id}}"><i class="fas fa-edit"></i></a>
            </h4>
            <p>{{description}}</p>
            <form action="/persons/delete/{{_id}}?_method=DELETE" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <button class="btn btn-danger btn-block btn-sm" type="submit">
                Delete
            </button>
            </form>
        </div>
    </div>
</div>
    {{/each}}
</div>